<Window
    x:Class="DisconnectedTask.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    WindowStartupLocation="CenterScreen"
    MinWidth="800"
    MinHeight="450"
    Width="800"
    Height="450"
    Name="MWindow"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="1" Name="MainDataGrid" SelectionChanged="MainDataGrid_SelectionChanged"/>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ComboBox
                Name="CBoxOrderIDs"
                Grid.Column="0"
                Margin="10,5,10,5"
                VerticalAlignment="Stretch"
                SelectionChanged="CBoxOrderIDs_SelectionChanged"/>
            <Button
                Name="BtnOrderDetails"
                Click="BtnOrderDetails_Click"
                Grid.Column="1"
                Margin="10,5,10,5"
                VerticalAlignment="Stretch">
                Order Details
            </Button>
        </Grid>
    </Grid>
</Window>
